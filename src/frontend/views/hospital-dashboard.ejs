<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hospital Dashboard - LifePulse</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/hospital.css">
</head>

<body class="hospital-theme">
  <div class="dashboard-layout">
    <div class="sidebar">
      <h3>Hospital Control</h3>
      <div class="stats-card">
        <h3 id="total-donors">0</h3>
        <p>Total Donors</p>
      </div>
      <div class="stats-card">
        <h3 id="pending-count">0</h3>
        <p>Pending Approvals</p>
      </div>
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
    <div class="main-panel">
      <h1>Donor Management System</h1>
      <div class="stats-overview">
        <div class="stats-card">
          <h3 id="approved-donors">0</h3>
          <p>Approved</p>
        </div>
        <div class="stats-card">
          <h3 id="rejected-donors">0</h3>
          <p>Rejected</p>
        </div>
      </div>
      <h2>Pending Approvals</h2>
      <div id="pending-donors" class="donor-table-container"></div>
      <h2>All Donors</h2>
      <div id="donors" class="donor-table-container"></div>
    </div>
    <div class="right-panel">
      <h3>Quick Stats</h3>
      <div class="stats-card">
        <h3 id="today-donors">0</h3>
        <p>Today's Activity</p>
      </div>
      <div class="stats-card">
        <h3 id="blood-groups">0</h3>
        <p>Blood Groups</p>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const token = localStorage.getItem('token');
    const headers = { 'Authorization': `Bearer ${token}`, 'Content-Type': 'application/json' };

    async function loadStats() {
      const response = await fetch('/api/hospital/dashboard', { headers });
      const stats = await response.json();
      document.getElementById('total-donors').textContent = stats.totalDonors;
      document.getElementById('pending-count').textContent = stats.pendingDonors;
      document.getElementById('approved-donors').textContent = stats.approvedDonors;
      document.getElementById('rejected-donors').textContent = stats.rejectedDonors;
      document.getElementById('today-donors').textContent = stats.todayActivity || 0;
      document.getElementById('blood-groups').textContent = stats.bloodGroups || 8;
    }

    async function loadPendingDonors() {
      const response = await fetch('/api/hospital/pending-donors', { headers });
      const data = await response.json();
      const container = document.getElementById('pending-donors');
      if (data.donors.length === 0) {
        container.innerHTML = '<p class="text-center">No pending approvals</p>';
        return;
      }
      container.innerHTML = `
        <table class="donor-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Blood Group</th>
              <th>Area</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            ${data.donors.map(donor => `
              <tr>
                <td>${donor.full_name}</td>
                <td>${donor.email}</td>
                <td><span class="badge bg-info">${donor.blood_group}</span></td>
                <td>${donor.area}</td>
                <td>
                  <button onclick="approveDonor(${donor.id})" class="btn btn-approve btn-sm">‚úÖ Approve</button>
                  <button onclick="rejectDonor(${donor.id})" class="btn btn-reject btn-sm">‚ùå Reject</button>
                </td>
              </tr>
            `).join('')}
          </tbody>
        </table>
      `;
    }

    async function approveDonor(id) {
      if (!confirm('Are you sure you want to approve this donor?')) return;

      const response = await fetch(`/api/hospital/approve/${id}`, { method: 'POST', headers });
      if (response.ok) {
        loadPendingDonors();
        loadStats();
        loadDonors();
      } else {
        const data = await response.json();
        alert('Error: ' + data.error);
      }
    }

    async function rejectDonor(id) {
      const reason = prompt("Please enter the reason for rejection:");
      if (!reason) return; // Cancelled or empty

      const response = await fetch(`/api/hospital/reject/${id}`, {
        method: 'POST',
        headers,
        body: JSON.stringify({ reason })
      });

      if (response.ok) {
        loadPendingDonors();
        loadStats();
        loadDonors();
      } else {
        const data = await response.json();
        alert('Error: ' + data.error);
      }
    }

    async function loadDonors() {
      const response = await fetch('/api/hospital/donors', { headers });
      const data = await response.json();
      const container = document.getElementById('donors');
      if (data.donors.length === 0) {
        container.innerHTML = '<p class="text-center">No donors found</p>';
        return;
      }
      container.innerHTML = `
        <table class="donor-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Blood Group</th>
              <th>Area</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            ${data.donors.map(donor => `
              <tr>
                <td>${donor.full_name}</td>
                <td>${donor.email}</td>
                <td><span class="badge bg-primary">${donor.blood_group}</span></td>
                <td>${donor.area}</td>
                <td><span class="status-pill ${donor.status.toLowerCase()}">${donor.status}</span></td>
                <td>
                  ${donor.status === 'APPROVED' ? `<button onclick="alertDonor(${donor.id})" class="btn btn-alert btn-sm">üö® Alert</button>` : ''}
                </td>
              </tr>
            `).join('')}
          </tbody>
        </table>
      `;
    }

    async function alertDonor(id) {
      if (!confirm('Are you sure you want to send an URGENT alert to this donor?')) return;

      try {
        const response = await fetch(`/api/hospital/alert-donor/${id}`, { method: 'POST', headers });

        // Handle 404 specifically
        if (response.status === 404) {
          alert('‚ùå Error: API Route not found. Please RESTART THE SERVER.');
          return;
        }

        let data;
        try {
          data = await response.json();
        } catch (e) {
          throw new Error(`Server returned status ${response.status} but invalid JSON`);
        }

        if (response.ok) {
          alert('‚úÖ ' + data.message);
        } else {
          alert('‚ùå Error: ' + data.error);
        }
      } catch (error) {
        console.error('Error sending alert:', error);
        alert('‚ùå Network/Server Error: ' + error.message);
      }
    }

    // Initialize dashboard
    loadStats();
    loadPendingDonors();
    loadDonors();
  </script>
</body>

</html>